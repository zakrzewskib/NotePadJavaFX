<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPaneNotePad" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.notepad.fxmlpackage.ControllerForFile">
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelDownside" text="Label"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <top>
        <HBox fx:id="hBoxNotePad" BorderPane.alignment="CENTER">
            <children>
                <MenuBar fx:id="menuBarNotePad">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="newFile" mnemonicParsing="false" text="New"/>
                                <MenuItem fx:id="openFile" mnemonicParsing="false" text="Open..." />
                                <MenuItem fx:id="saveFile" mnemonicParsing="false" onAction="#saveFileOnAction" text="Save" />
                                <MenuItem fx:id="saveFileAs" mnemonicParsing="false" text="Save As..." />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem fx:id="exit" mnemonicParsing="false" text="Exit" />
                            </items>
                        </Menu>
                        <fx:include source="editMenuItems.fxml"/>
                        <fx:include source="formatMenuItems.fxml"/>
                        <fx:include source="viewMenuItems.fxml"/>
                        <fx:include source="helpMenuItems.fxml"/>
                    </menus>
                </MenuBar>
            </children>
        </HBox>
    </top>
    <center>
        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
