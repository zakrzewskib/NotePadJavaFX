<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPaneNotePad" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.notepad.fxmlpackage.Controller">
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelDownside" text="Label"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <top>
        <HBox fx:id="hBoxNotePad" BorderPane.alignment="CENTER">
            <children>
                <MenuBar fx:id="menuBarNotePad">
                    <menus>

                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="newFile" mnemonicParsing="false" text="New"/>
                                <MenuItem fx:id="openFile" mnemonicParsing="false" text="Open..." />
                                <MenuItem fx:id="saveFile" mnemonicParsing="false" onAction="#saveFileOnAction" text="Save" />
                                <MenuItem fx:id="saveFileAs" mnemonicParsing="false" text="Save As..." />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem fx:id="exit" mnemonicParsing="false" text="Exit" />
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem fx:id="edit" mnemonicParsing="false" onAction="#editOnAction" text="Undo" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" text="Redo" />
                                <MenuItem mnemonicParsing="false" text="Cut" />
                                <MenuItem mnemonicParsing="false" text="Copy" />
                                <MenuItem mnemonicParsing="false" text="Paste" />
                                <MenuItem mnemonicParsing="false" text="Delete" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" text="Select All" />
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="Format">
                            <items>
                                <CheckMenuItem  fx:id="wordWrap" mnemonicParsing="false" text="Word Wrap"/>
                                <MenuItem mnemonicParsing="false" text="Font"/>
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="View">
                            <items>
                                <Menu mnemonicParsing="false" text="Zoom">
                                    <items>
                                        <MenuItem fx:id="zoomIn" mnemonicParsing="false" text="Zoom In"/>
                                        <MenuItem mnemonicParsing="false" text="Zoom Out"/>
                                    </items>
                                </Menu>
                                <CheckMenuItem mnemonicParsing="false" selected="true" text="Status Bar"/>
                            </items>
                        </Menu>


                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem fx:id="about" mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>

                    </menus>
                </MenuBar>
            </children>
        </HBox>
    </top>
    <center>
        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
