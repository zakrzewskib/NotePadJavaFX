<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.notepad.fxmlpackage.Controller">
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelDownside" text="Label"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>

                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="newFile" mnemonicParsing="false" text="New"/>
                                <MenuItem fx:id="openFile" mnemonicParsing="false" text="Open..." />
                                <MenuItem fx:id="saveFile" mnemonicParsing="false" onAction="#saveFileOnAction" text="Save" />
                                <MenuItem fx:id="saveFileAs" mnemonicParsing="false" onAction="#saveFileAsOnAction" text="Save As..." />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem fx:id="exit" mnemonicParsing="false" onAction="#exitOnAction" text="Exit" />
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#undoOnAction" text="Undo" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" text="Redo" onAction="#redoOnAction"/>
                                <MenuItem mnemonicParsing="false" text="Cut" onAction="#cutOnAction"/>
                                <MenuItem mnemonicParsing="false" text="Copy" onAction="#copyOnAction"/>
                                <MenuItem mnemonicParsing="false" text="Paste" onAction="#pasteOnAction"/>
                                <MenuItem mnemonicParsing="false" text="Delete" onAction="#deleteOnAction"/>
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" text="Select All" onAction="#selectAllOnAction"/>
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="Format">
                            <items>
                                <CheckMenuItem mnemonicParsing="false" text="Word Wrap" onAction="#wordWrapOnAction"/>
                                <MenuItem mnemonicParsing="false" text="Font" onAction="#fontOnAction"/>
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="View">
                            <items>
                                <Menu mnemonicParsing="false" text="Zoom">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Zoom In" onAction="#zoomInOnAction"/>
                                        <MenuItem mnemonicParsing="false" text="Zoom Out" onAction="#zoomOutOnAction"/>
                                    </items>
                                </Menu>
                                <CheckMenuItem mnemonicParsing="false" selected="true" text="Status Bar" onAction="#statusBarOnAction"/>
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" onAction="#aboutOnAction"/>
                            </items>
                        </Menu>

                    </menus>
                </MenuBar>
            </children>
        </HBox>
    </top>
    <center>
        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
