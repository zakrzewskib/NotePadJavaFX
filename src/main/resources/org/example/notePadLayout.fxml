<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPaneNotePad" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelDownside" text="Label"/>
                <fx:include source="testButton.fxml"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <top>
        <HBox fx:id="hBoxNotePad" BorderPane.alignment="CENTER">
            <children>
                <MenuBar fx:id="menuBarNotePad">
                    <menus>

                        <fx:include source="fileMenuItems.fxml"/>
                        <fx:include source="editMenuItems.fxml"/>

                        <Menu mnemonicParsing="false" text="Format">
                            <items>
                                <CheckMenuItem mnemonicParsing="false" text="Word Wrap"/>
                                <MenuItem mnemonicParsing="false" text="Font"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="View">
                            <items>
                                <Menu mnemonicParsing="false" text="Zoom">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Zoom In"/>
                                        <MenuItem mnemonicParsing="false" text="Zoom Out"/>
                                    </items>
                                </Menu>
                                <CheckMenuItem mnemonicParsing="false" selected="true" text="Status Bar"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </HBox>
    </top>
    <center>
        <TextArea prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
